<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

    <View
        android:id="@+id/view3"
        android:layout_width="411dp"
        android:layout_height="126dp"
        android:background="#EE3026"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="410dp"
        android:layout_height="105dp"
        android:background="#EE3026"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@drawable/sol_vermelho" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="128dp"
        android:layout_height="123dp"
        android:layout_marginTop="432dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.731"
        app:srcCompat="@drawable/sol_vermelho" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="109dp"
        android:layout_height="117dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/autor" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RAY BRADBURY (1920–2012)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ScrollView
            android:id="@+id/scrollView13"
            android:layout_width="0dp"
            android:layout_height="93dp"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ray Bradbury (1920–2012) foi um dos mais influentes e prolíficos escritores de ficção científica e fantasia do século XX. Nascido em Waukegan, Illinois, Bradbury desenvolveu uma paixão pela leitura e escrita desde cedo, inspirado por obras de autores como Edgar Allan Poe e H.G. Wells. Embora tenha se aventurado em diferentes gêneros, ele é mais conhecido por suas obras de ficção científica que exploram questões sociais, culturais e filosóficas."
                android:textColor="#FFFFFF"/>
        </ScrollView>

        <ScrollView
            android:id="@+id/scrollView14"
            android:layout_width="409dp"
            android:layout_height="125dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView13">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sua obra mais famosa, Fahrenheit 451 (1953), é uma distopia que se tornou um marco na literatura mundial, abordando temas como censura, a opressão governamental e a importância dos livros e do conhecimento. A visão de Bradbury de um futuro em que os livros são queimados em nome da conformidade ressoou profundamente em leitores de todas as gerações, solidificando seu lugar na história da literatura. Além de Fahrenheit 451, Bradbury escreveu inúmeros contos, romances, roteiros para cinema e televisão, e peças teatrais. Sua coleção de contos As Crônicas Marcianas (1950) é outro destaque, retratando a colonização de Marte por humanos e as complexidades que surgem desse encontro. Bradbury era conhecido por sua prosa lírica e seu talento para explorar as nuances emocionais de seus personagens, muitas vezes levando o leitor a reflexões profundas sobre a condição humana. Embora frequentemente associado à ficção científica, Bradbury considerava suas histórias como fantasias e não profecias. Ele acreditava no poder da imaginação e na importância de sonhar com futuros alternativos, mesmo que sombrios, para evitar que se tornassem realidade. Ao longo de sua vida, Ray Bradbury recebeu inúmeros prêmios e honrarias por suas contribuições à literatura, incluindo o prestigiado National Medal of Arts. Até o fim de sua carreira, Bradbury permaneceu um defensor apaixonado da leitura, da escrita e da liberdade de expressão, legando ao mundo uma obra que continua a inspirar e desafiar leitores em todo o mundo."
                android:textColor="#FAF9F9"
                android:textSize="16sp" />
        </ScrollView>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="168dp"
            android:layout_height="196dp"
            android:layout_marginTop="396dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <ImageView
        android:id="@+id/imageView15"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="SOBRE O "
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTOR"
        android:textColor="#FFD500"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
