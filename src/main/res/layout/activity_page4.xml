<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page4Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

    <View
        android:id="@+id/view3"
        android:layout_width="405dp"
        android:layout_height="127dp"
        android:background="#EE3026"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="404dp"
        android:layout_height="39dp"
        android:background="#EE3026"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/sol_vermelho" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="123dp"
        android:layout_height="76dp"
        android:layout_marginTop="432dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sol_vermelho" />

    <ScrollView
        android:layout_width="414dp"
        android:layout_height="446dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAHRENHEIT 451 (1966) / FILME"
                android:textColor="#FDFDFD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="395dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="105dp"
                    android:layout_height="246dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="72dp"
                    app:srcCompat="@drawable/fahrenheit_451_1966_" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="228dp"
                    android:layout_height="323dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="48dp"
                    android:text="Dirigido por François Truffaut, este filme foi a primeira adaptação cinematográfica de Fahrenheit 451. Estreando em 1966, foi um marco por ser o primeiro e único filme em inglês dirigido por Truffaut. O filme segue de perto o enredo do livro, com Oskar Werner no papel de Guy Montag e Julie Christie em um papel duplo como Mildred e Clarisse. A visão de Truffaut para o filme foi marcante, utilizando uma estética minimalista e simbólica para capturar a natureza opressiva da sociedade sem livros. Embora tenha recebido críticas mistas na época de seu lançamento, o filme é hoje considerado um clássico do cinema de ficção científica. "
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:text="FAHRENHEIT 451 (2018) / FILME"
                android:textColor="#FBFAFA" />

            <LinearLayout
                android:layout_width="427dp"
                android:layout_height="336dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="107dp"
                    android:layout_height="214dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/fahrenheit_451__2018_" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="256dp"
                    android:layout_height="280dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:text="Em 2018, Fahrenheit 451 foi adaptado novamente, desta vez como um filme para a HBO, dirigido por Ramin Bahrani. Nesta versão, o enredo é modernizado, trazendo elementos contemporâneos como a internet e as mídias sociais, o que atualiza a mensagem do livro para as novas realidades tecnológicas. Michael B. Jordan interpreta Montag, e Michael Shannon assume o papel do Capitão Beatty. Embora tenha sido elogiado por suas atuações e efeitos visuais, a adaptação de 2018 recebeu críticas mistas quanto à sua fidelidade ao espírito original da obra e à profundidade das questões abordadas no livro. "
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="253dp"
                android:layout_height="22dp"
                android:layout_marginTop="24dp"
                android:text="FAHRENHEIT 451 (1984) / VIDEOGAME"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="359dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="169dp"
                    android:layout_height="162dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/fahrenheit_451_1984_" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="236dp"
                    android:layout_height="311dp"
                    android:layout_marginTop="12dp"
                    android:text="Fahrenheit 451 também foi adaptado para um jogo de computador em 1984, desenvolvido pela Telarium. Este jogo de aventura textual foi lançado para plataformas como o Apple II e o Commodore 64. Diferente das adaptações cinematográficas, o jogo serve como uma espécie de &quot;continuação&quot; do romance, onde os jogadores assumem o papel de Montag após os eventos do livro. O objetivo é encontrar e preservar livros escondidos para garantir a sobrevivência do conhecimento. Embora limitado pelas tecnologias da época, o jogo foi uma tentativa inovadora de expandir o universo de Fahrenheit 451 e engajar os fãs em uma nova mídia interativa. "
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="37dp"
        android:layout_height="44dp"
        android:layout_marginBottom="50dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="INFORMACOES"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toEndOf="@+id/imageView13" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
